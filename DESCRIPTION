    ggplot2 (>= 2.2.1),
    grid (>= 3.5.0),
    IRanges (>= 2.8.2),
    methods,
    rtracklayer,
    rlang,
    scales (>= 0.4.1),
    S4Vectors (>= 0.12.2),
    stats,
    SummarizedExperiment (>= 1.4.0),
    tidyr (>= 0.6.1),
    utils
